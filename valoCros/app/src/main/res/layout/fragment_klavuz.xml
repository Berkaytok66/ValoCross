<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Fragment.KlavuzFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"

        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="209dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1 - Bir Cros seçin"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TableRow>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="200dp"

                    android:src="@drawable/png1">

                </ImageView>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="1 - Cros Kodunu Kopyalayın"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TableRow>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="270dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/png2">

                </ImageView>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:text="3 - Valorant ta AYARLAR - NİŞANGAH  "
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TableRow>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="270dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/png3">

                </ImageView>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 - Kopyaladığınız kodu oyuna aktarmak için bu seçeneği secin."
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TableRow>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="70dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/png4">

                </ImageView>
            </TableRow>
        </TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 - Kodu buraya yapıştırın."
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="@color/black"/>
            <TableRow>

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="270dp"

                    android:scaleType="fitXY"
                    android:src="@drawable/png5">

                </ImageView>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</ScrollView>